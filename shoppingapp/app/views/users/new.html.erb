<h1> Register </h1>
<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>
<%= form_with(model: @user) do |form| %>
<div>
  <%= form.label :name %><br>
  <%= form.text_field :name %><br>
  <% @user.errors.full_messages_for(:name).each do |message| %>
   <div><%= message %></div>
   <% end %>
</div>

<div>
  <%= form.label :email_id %><br>
  <%= form.email_field :email_id %><br>
  <% @user.errors.full_messages_for(:email_id).each do |message| %>
   <div><%= message %></div>
   <% end %>
</div>


<div>
    <%= form.label :contact_number %><br>
    <%= form.text_field :contact_number %><br>
    <% @user.errors.full_messages_for(:contact_number).each do |message| %>
     <div><%= message %></div>
     <% end %>
</div>

<div>
  <%= form.label :password %><br>
  <%= form.password_field :password %><br>
  <% @user.errors.full_messages_for(:password).each do |message| %>
   <div><%= message %></div>
   <% end %>
</div>

<div>
  <%= form.label 'password_confirmation' %><br>
  <%= form.password_field :password_confirmation %>
</div>

<div>
   <%= form.submit %>
</div>

<% end %>
